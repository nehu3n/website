<div class="cat-fixed-container fixed bottom-8 right-8 z-50 pointer-events-auto">
  <div class="cat-3d-wrapper group">
    <div class="cat-body relative w-16 h-16 transition-transform duration-500 transform-gpu group-hover:scale-110">
      <div class="relative w-full h-full">
        <div class="absolute inset-0 flex items-center justify-center">
             <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="0.8" stroke-linecap="round" stroke-linejoin="round" class="w-12 h-12 text-white opacity-40 group-hover:opacity-100 transition-all duration-700">
                <path d="M7 8 L4 2 L10 5" />
                <path d="M17 8 L20 2 L14 5" />
                <path d="M12 21 C7 21 4 18 4 13 C4 10 6 7 12 7 C18 7 20 10 20 13 C20 18 17 21 12 21 Z" />
             </svg>
        </div>
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 flex gap-2 pointer-events-none">
          <div class="eye w-1 h-1 bg-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>
          <div class="eye w-1 h-1 bg-white rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>
        </div>
      </div>
    </div>
    
    <div class="absolute bottom-full right-0 mb-4 opacity-0 group-hover:opacity-100 transition-all duration-500 translate-y-2 group-hover:translate-y-0">
      <div class="bg-zinc-900 border border-zinc-800 text-[10px] text-zinc-400 px-3 py-1 font-mono uppercase tracking-widest whitespace-nowrap">
        meow_
      </div>
    </div>
  </div>
</div>

<style>
  .cat-fixed-container {
    perspective: 1000px;
  }
  
  .cat-3d-wrapper {
    transform-style: preserve-3d;
    animation: float-slow 4s ease-in-out infinite;
  }

  .cat-fixed-container:hover .cat-body {
    transform: rotateY(-20deg) rotateX(10deg);
  }

  .eye {
    box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
  }

  @keyframes float-slow {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }
</style>

<script>
  const container = document.querySelector('.cat-fixed-container');
  const eyes = document.querySelectorAll('.eye');

  window.addEventListener('mousemove', (e) => {
    if (!container) return;
    const rect = container.getBoundingClientRect();
    const centerX = rect.left + rect.width / 2;
    const centerY = rect.top + rect.height / 2;
    
    const angleX = (e.clientX - centerX) / window.innerWidth * 10;
    const angleY = (e.clientY - centerY) / window.innerHeight * 10;
    
    eyes.forEach(eye => {
      (eye as HTMLElement).style.transform = `translate(${angleX}px, ${angleY}px)`;
    });
  });
</script>
