---
import Header from '../../components/Header.astro';
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<Layout title="Portfolio">
  <main class="mx-auto max-w-content px-6 pt-24">
    <Header />

    <section class="mb-16">
      <h1 class="text-4xl font-medium tracking-tight text-zinc-900 dark:text-zinc-100">
        Welcome to my <span class="text-zinc-700 dark:text-zinc-300">blog</span> üêà
      </h1>
      <p class="mt-6 text-lg leading-relaxed text-zinc-600 dark:text-zinc-400">
        Here you will find all the posts I have published. I hope you enjoy them.
      </p>
    </section>

    <section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.slug}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>

    <footer class="border-t-4 border-zinc-200 dark:border-zinc-800">
    <div class="mx-auto max-w-content px-6 py-8">
      <p class="text-sm text-center text-zinc-500 dark:text-zinc-400">
        Made with ‚ù§ by Nehu√©n.
      </p>
    </div>
  </footer>
</Layout>